<%- doctype_tag() %>

<%- button_to("google", "http://www.google.com", {value: "to google"}) %><br />

<%- mail_to("me@domain.com", "Send Me Email", {encode : "hex", subject: "that thing I sent you", body: "did you get that thing I sent you"}) %><br />

<% form_for("user", {multipart: true}, function(f){ %>
	<%- f.hidden_field('id') %>
	
	<%- f.label_for("username") %>
	<%- f.text_field("username") %><br />

	<%- f.label_for("date") %>
	<%- f.date_time('date', {twelvehour:true}) %><br />

	<%- f.label_for("email") %>
	<%- f.email_field('email', {value: 'test@email.com'}) %><br />
	
	<%- f.label_for("website") %>
	<%- f.url_field('website', {value:'http://website.com'}) %><br />
	
	<%- f.label_for("file") %>
	<%- f.file_field('file', {value: 5}) %><br />

	<%- f.label_for("search") %>
	<%- f.search_field('search') %><br />

	<%- f.label_for("phone") %>
	<%- f.phone_field('something[interesting]') %><br />
	
	<%- f.label_for("checkbox") %>
	<%- f.checkbox("checkbox", {value: "value"}) %><br />

	<%- f.reset() %><br />
	<%- f.submit({class: 'button'}) %><br />
<% }) %>
